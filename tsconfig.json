{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "src/scripts",
    "outDir": "dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "noResolve": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "*": ["*", "./*"],
      "@libs/*": ["./libs/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@tools/*": ["./tools/*"],
      "@stores/*": ["./stores/*"],
      "@configs/*": ["./configs/*"],
      "@services/*": ["./services/*"],
      "@settings/*": ["./settings/*"],
      "@components/*": ["./components/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["node_modules/@types"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
