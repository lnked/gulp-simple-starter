{% import "utils/mixins.njk" as macro %}

{%- set nav = [
  {
    name: "Page 1",
    slug: "page-1",
    link: "../#/page-1"
  },
  {
    name: "Page 2",
    slug: "page-2",
    link: "../#/page-2"
  },
  {
    name: "Example",
    slug: "example",
    link: "./example/index.njk"
  }
]
-%}

<nav class="navigation" tabindex="-1" aria-label="Основное меню">
  <ul class="navigation__list">
    {%- if nav -%}
      {%- for item in nav -%}
        {{ macro.navitem(item.name, item.link, loop.index, current === item.slug) }}
      {%- endfor -%}
    {%- endif -%}
  </ul>
</nav>
